---
/**
 * About Page - Placeholder Page
 * Temporary page until About page spec is implemented.
 * Uses BaseLayout for consistent site structure.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About - Saurabh Sarin" description="About Saurabh Sarin and this site.">
  <article class="about-page">
    <section class="intro">
      <h1>About</h1>
      <p class="subtitle">Coming soon.</p>
    </section>

    <section class="about-content">
      <p>
        This page will share the human context behind this site -
        who I am and why I think in public.
      </p>
    </section>
  </article>
</BaseLayout>

<style>
  /* About Page Styles
   * Follows global.css patterns with text-first, calm aesthetic
   */

  .about-page {
    /* Page container inherits main styling from global.css */
  }

  /* Intro Section - matches other pages */
  .intro {
    margin-bottom: 3rem;
  }

  .intro h1 {
    /* Uses h1 styling from global.css: 1.75rem/600 */
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    font-style: italic;
    margin-bottom: 0;
  }

  /* About Content */
  .about-content {
    color: var(--color-text-secondary);
  }
</style>
